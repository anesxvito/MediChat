{
  "providers": ["node"],
  "phases": {
    "setup": {
      "nixPkgs": ["nodejs_20", "openssl"]
    },
    "install": {
      "cmds": ["cd backend && npm install"]
    },
    "build": {
      "cmds": [
        "cd backend && npx prisma generate",
        "cd backend && npx prisma migrate deploy"
      ]
    }
  },
  "start": {
    "cmd": "cd backend && npm start"
  }
}
