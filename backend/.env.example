# MEDICHAT - ENVIRONMENT VARIABLES TEMPLATE
# Generate secrets: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"

PORT=5000
NODE_ENV=development
DATABASE_URL="postgresql://username:password@localhost:5432/medichat"
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/medichat
JWT_SECRET=<GENERATE_32_BYTE_SECRET>
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=<GENERATE_32_BYTE_SECRET>
REFRESH_TOKEN_EXPIRES_IN=7d
AZURE_HEALTHCARE_ENDPOINT=<your-endpoint>
FRONTEND_URL=http://localhost:3001
SESSION_TIMEOUT_MINUTES=15
SESSION_SECRET=<GENERATE_32_BYTE_SECRET>
ENCRYPTION_KEY=<GENERATE_32_BYTE_SECRET>
ENCRYPTION_ALGORITHM=aes-256-gcm
BCRYPT_ROUNDS=12
HIPAA_LOG_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true
